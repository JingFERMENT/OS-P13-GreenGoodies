{% extends 'base.html.twig' %}

{% block title %}Connextion
{% endblock %}

{% block main %}
	<section class="connexion-hero">
		<img src="{{ asset('img/Conviction_Hero_Cover.jpg') }}" alt="Les branches avec des fleurs rouges, l'image connexion de Greengoodies" class="connexion-hero-cover">
		<form method="post" class="connexion-hero-text" novalidate>
			<div class="form-wrapper">
				{# Display any error messages #}
					{% for error in app.flashes('error') %}
						<div class="alert alert-danger"> {{ error }}</div>
				{% endfor %}
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				<h1 class="">Connexion</h1>
				<div class="form-group">
					<label for="username">Adresse email</label>
					<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
				</div>
				<div class="form-group">
					<label for="password">Mot de passe</label>
					<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
					<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
				</div>

			<button class="btn-register form-group" type="submit">
				Se connecter
			</button>
			<a class="login-link" href={{path('app_register')}}>Pas encore de compte ? Sâ€™inscrire</a>
            </div>
		</form>
	</section>
{% endblock %}
