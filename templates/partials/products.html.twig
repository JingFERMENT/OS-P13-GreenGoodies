{# section product #}

<section class="products-block" id="products">
	<h2>Nos produits</h2>
	<div class="products-list">
		{% for product in products %}
		<div class="product-card">
			<img src="{{ asset('img/'~product.picture |replace({'.jpg': '.webp'}))}}" loading="lazy" alt="{{ product.name}}" class="product-image">
			<div class="product-info">
				<h3>{{ product.name}}</h3>
				<p class="short-description">{{ product.shortDescription}}</p>
				<p class="price">{{ product.price}} â‚¬</p>
				<a href="{{ path('app_product', { id: product.id }) }}" class="btn">Voir le produit</a>
			</div>
		</div>
		{% endfor %}
	</div>
</section>

{# end section product #}
