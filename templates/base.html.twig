<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width; initial-scale=1"/>
		<title>
			{% block title %}{% endblock %}
			- GreenGoodies
		</title>

		{# favicon #}
		<link
		rel="icon" href="{{ asset('img/favicon.png') }}">

		{# css #}
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
		{% endblock %}

		{# javascript #}
		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		{# header #}
		{% block header %}
			<header
				class="navbar">
				{# logo and navigation #}
				<div class="logo">
					<a href="{{path('app_home')}}">
						{# logo image #}
						<img src="{{ asset('img/logo.svg') }}" alt="GreenGoodies Logo">
					</a>
				</div>
				<nav class="nav-links">
					<a href="{{ path('app_home') }}#products">Nos produits</a>
					<a href="#">Mon panier</a>
					<a href="#">Mon compte</a>
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
					{# if user is authenticated #}
					<a href={{ path("app_logout") }}>DÃ©connexion</a>
					{% else %}
					{# if user is not authenticated #}
					<a href={{ path("app_login") }}>Connexion</a>
					<a href={{ path("app_register") }}>Inscription</a>
					{% endif %}
				</nav>
			</header>
		{% endblock %}

		{# main content #}
		{% block main %}
		{% endblock %}

		{# footer #}
		{% block footer %}
			<footer>
				<p>&copy; GreenGoodies -
					{{ "now"|date("Y") }}
				</p>
			</footer>
		{% endblock %}
	</body>
</html>
