<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width; initial-scale=1"/>
		<title>
			{% block title %}{% endblock %}
			- GreenGoodies
		</title>

		{# favicon #}
		<link
		rel="icon" href="{{ asset('img/favicon.png') }}">

		{# css #}
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
		{% endblock %}

		{# javascript #}
		{% block javascripts %}
			<script src="{{ asset('js/hamburger.js') }}"></script>
		{% endblock %}
	</head>
	<body>
		{# header #}
		{% block header %}
			<header
				class="navbar">
				{# logo #}
				<div class="logo">
					<a
						href="{{path('app_home')}}">
						{# logo image #}
						<img src="{{ asset('img/logo.svg') }}" alt="GreenGoodies Logo">
					</a>
				</div>

				<!-- Hamburger button -->
				<button class="hamburger" aria-label="Menu">
					☰
				</button>

				{# navigation links #}
				<nav class="nav-links">
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						<a href={{ path('app_home') }}#products>Nos produits</a>
						<a href={{ path('app_cart') }}>Mon panier</a>
						<a href={{ path('app_my_account') }}>Mon compte</a>
						<a href={{ path("app_logout") }}>Déconnexion</a>
					{% else %}
						{# if user is not authenticated #}
						<a href={{ path("app_login") }}>Connexion</a>
						<a href={{ path("app_register") }}>Inscription</a>
					{% endif %}
				</nav>
			</header>
		{% endblock %}

		{% for label, messages in app.flashes %}
			<div class="flash-message {{ label }}">
				{% for message in messages %}
					<p>{{ message }}</p>
				{% endfor %}
			</div>
		{% endfor %}

		{# main content #}
		{% block main %}{% endblock %}

		{# footer #}
		{% block footer %}
			<footer>
				<p>&copy; GreenGoodies -
					{{ "now"|date("Y") }}
				</p>
			</footer>
		{% endblock %}
	</body>
</html>
